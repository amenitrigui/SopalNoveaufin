@model SopalS.Models.ConteneurModel.Conteneur

@{
    ViewData["Title"] = "Delete";
}

<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <style>
        .navbar-custom {
            background-color: #000080;
            width: 100%;
        }

            .navbar-custom .nav-link {
                color: #ffffff; /* Pour les liens */
            }

            .navbar-custom .navbar-brand {
                color: #ffffff; /* Pour le texte 'Sopal' */
            }

        .container-custom {
            max-width: 1140px; /* Change this to match your form's max width */
            margin: 0 auto;
        }

        .btn-outline-primary {
            background-color: #000080; /* Same color as navbar */
            color: #ffffff; /* Text color to match */
            border: none; /* Remove border for a cleaner look */
        }

        .btn-outline-primary:hover {
                background-color: #000060; /* Slightly darker color on hover */
            }
    </style>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <!-- Icons -->
    <link rel="stylesheet" href="../assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="../assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="../assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="../assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="../assets/vendor/js/helpers.js"></script>
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <script src="../assets/js/config.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom" data-bs-theme="dark">
            <div class="container container-custom">
                <span class="app-brand-text demo menu-text fw-bolder ms-2">
                    <img src="~/img/logosopal.png" class="img-fluid" style="max-width:50px; height: 50px;" alt="Logo Sopal">
                </span>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">PlAN DI & CASSE A OUTIL <i class="bi bi-arrows-fullscreen"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Conteneur" asp-action="Index">Donnés de base</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">parametrage</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a asp-controller="Utilisateur" asp-action="Register" class="bi bi-person-circle"></a>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container container-custom mt-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ref)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ref)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CodeBarres)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CodeBarres)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmplacementId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmplacementId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateMiseEnService)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateMiseEnService)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PeriodiciteEtalonnage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PeriodiciteEtalonnage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateDernierEtalonnage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateDernierEtalonnage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DernierPoids)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DernierPoids)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Unite)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Unite)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserCreate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserCreate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserUpdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserUpdate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateUpdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUpdate)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Ref" />
            <input type="submit" asp-action="Delete" asp-controller="Conteneur" value="Delete" class="btn btn-outline-primary" />
          
        </form>
    </div>
</body>
</html>
